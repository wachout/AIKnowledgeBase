# AIKnowledgeBase 环境变量配置模板
# 复制此文件为 .env 并填写实际值

# ============================================
# LLM API 配置
# ============================================

# OpenAI 配置 (可选)
OPENAI_API_KEY=your-openai-api-key
OPENAI_BASE_URL=https://api.openai.com/v1

# 通义千问配置 (推荐)
DASHSCOPE_API_KEY=your-dashscope-api-key
DASHSCOPE_BASE_URL=https://dashscope.aliyuncs.com/compatible-mode/v1

# DeepSeek 配置 (可选)
DEEPSEEK_API_KEY=your-deepseek-api-key
DEEPSEEK_BASE_URL=https://api.deepseek.com/v1

# 默认使用的模型
DEFAULT_LLM_MODEL=qwen2.5-72b-instruct
DEFAULT_EMBEDDING_MODEL=text-embedding-v3

# ============================================
# 数据库配置
# ============================================

# MySQL 配置
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=root
MYSQL_PASSWORD=your-mysql-password
MYSQL_DATABASE=aiknowledgebase

# PostgreSQL 配置
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-postgres-password
POSTGRES_DATABASE=aiknowledgebase

# SQLite 配置 (用于会话存储)
SQLITE_DB_PATH=./data/sessions.db

# ============================================
# 向量数据库配置
# ============================================

# Milvus 配置
MILVUS_HOST=localhost
MILVUS_PORT=19530
MILVUS_COLLECTION=documents

# Chroma 配置 (备选)
CHROMA_PERSIST_DIRECTORY=./data/chroma

# ============================================
# 图数据库配置
# ============================================

# Neo4j 配置
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=your-neo4j-password

# NebulaGraph 配置 (可选)
NEBULA_HOST=localhost
NEBULA_PORT=9669
NEBULA_SPACE_NAME=knowledge_graph

# ============================================
# 搜索引擎配置
# ============================================

# Elasticsearch 配置
ELASTICSEARCH_HOST=localhost
ELASTICSEARCH_PORT=9200
ELASTICSEARCH_INDEX=documents

# ============================================
# 缓存配置
# ============================================

# Redis 配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ============================================
# 嵌入模型配置
# ============================================

# Xinference 配置
XINFERENCE_BASE_URL=http://localhost:9997
XINFERENCE_EMBEDDING_MODEL=bge-large-zh-v1.5

# 本地嵌入模型路径 (可选)
LOCAL_EMBEDDING_PATH=./models/embedding

# ============================================
# 文件存储配置
# ============================================

# 上传文件存储路径
UPLOAD_DIR=./uploads

# 文档索引存储路径
INDEX_DIR=./data/indexes

# ============================================
# 服务配置
# ============================================

# Flask 服务配置
FLASK_HOST=0.0.0.0
FLASK_PORT=5000
FLASK_DEBUG=false

# API 密钥 (用于服务间通信)
API_SECRET_KEY=your-api-secret-key

# ============================================
# 日志配置
# ============================================

LOG_LEVEL=INFO
LOG_FILE=./logs/app.log

# ============================================
# 功能开关
# ============================================

# 启用四层多智能体协作系统
ENABLE_HIERARCHICAL_AGENTS=true

# 启用 RAG 功能
ENABLE_RAG=true

# 启用 SQL 生成功能
ENABLE_SQL_AGENT=true

# 启用可视化功能
ENABLE_VISUALIZATION=true

# 启用多模态功能 (需要配置多模态模型)
ENABLE_MULTIMODAL=false
